											<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
											<button class="btn btn-link">
												<i class="fa fa-trash" aria-hidden="true"></i>
											</button>
										</form>
									</div>
								</div>
							</div>
						{% endif %}
					</tr>
				</td>
			</tbody>
		</tr>
	</div>
