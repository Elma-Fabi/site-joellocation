{% extends 'baseClient2.html.twig' %}

{% block title %}
	options et garanties
{% endblock %}
{% block stylesheets %}
	<link href="{{ asset( 'css/client/validationDevis.css')}}" rel="stylesheet">

{% endblock %}
{% block nav %}{% endblock %}
{% block body %}
	<h1>Options garanties</h1>

	<div class="row">
		<div class="col-md-3">
			<div class="card p-2 btn-block h-100  card mdl-shadow--2dp">
				<div class="x_title">
					<h5>
						<i class="fa fa-chevron-right"></i>
						Votre véhicule
					</h5>
				</div>
				<div class="vehicule">
					<div class="marque_modele">{{devis.vehicule.marque}}
						{{devis.vehicule.modele}}</div>
					<img src="/uploads/vehicules/{{ devis.vehicule.image }}" alt="{{ devis.vehicule.image }}" class="img-circle  " style="width : 100%;">

				</div>
				<div>
					<h5 class="heading">Agence départ
					</h5>
					<div class="content_depart border-bottom">
						<p>
							<i class="fa fa-map-marker"></i>
							<span id="agence_depart">{{devis.agenceDepart}}</span><br>
							<span id="date_depart">{{devis.dateDepart | date('d-m-Y H:i')}}</span>
							<span id="heure_depart"></span>
						</p>
					</div>
					<h5 class="heading">Agence retour
					</h5>
					<div class="content_retour border-bottom">
						<p>
							<i class="fa fa-map-marker"></i>
							<span id="agence_retour">{{devis.agenceRetour}}</span><br>
							<span id="date_retour">{{devis.dateRetour| date('d-m-Y H:i')}}</span>
							<span id="heure_retour"></span>
						</p>
					</div>
					<p>
						Soit
						<span id="nombre_jours_location">{{devis.duree}}</span>
						jours de location</p>

					<h5 class="heading">Prix de base de location</h5>
					<div class="prix_location border-bottom">
						<span id="prix">{{tarif}}</span>EUR<br>
						soit
						<span id="prix">{{tarifJour}}</span>euro/jour
					</div>
					<div class="prestation border-bottom">
						<h5 class="heading">Prestations incluses</h5>
						<ul class="pl-2 ">
							<li>
								<i class="fa fa-check"></i>
								Kilométrage Illimité
							</li>
							<li>
								<i class="fa fa-check"></i>
								Assurance accidents causés aux tiers
							</li>
							<li>
								<i class="fa fa-check"></i>
								Assurance responsabilité civile
							</li>
							<li>
								<i class="fa fa-check"></i>
								Assurance collision (CDW)
							</li>
							<li>
								<i class="fa fa-check"></i>
								TVA 8.5 %
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-9 mdl-shadow--2dp">
			{{ form_start(form) }}
			<input type="hidden" value={{devisID}} name="devisID">
			<div class="card mdl-shadow--2dp">
				<div class="text-center mt-4 mb-4">
					<h2>VOS GARANTIES</h2>
				</div>
				<div class="row mb-0">
					{% for garantie in form.garanties %}
						<div class="col-md-4">
							<div class="m-2 p-2 border-top border-right border-left">
								{{form_widget(garantie)}}
							</div>
						</div>
					{% endfor %}
				</div>
				<div class="row mt-0">
					{% for gar in garanties %}
						<div class="col-md-4 ">
							<div class="m-2 p-2 border-bottom border-right border-left ">
								<p>
									{{gar.description}}
								</p>
							</div>
						</div>
					{% endfor %}
				</div>

				<div class="text-center mt-4 mb-4">
					<h2>VOS OPTIONS</h2>
				</div>
				<div class="p-3">
					<div class="x_title">
						<h4>
							Siège bébé / enfant
						</h4>
					</div>
					<p>Nous mettons à votre disposition des sièges bébé et nourrissons, homologués NF, pour seulement 30 euros TTC. Les rehausseurs pour les enfants de + de 15kg sont totalement gratuits !</p>
				</div>
				<div class="d-flex justify-content-around">
					{% for option in form.options %}
						<div>
							{{form_widget(option)}}
						</div>
					{% endfor %}
				</div>
				<div class="text-center mt-3 mb-3">
					<button class="btn btn-danger ">
						<i class="fa fa-book" aria-hidden="true"></i>
						{{ button_label|default('Enregistrer') }}</button>
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
	{# {{ form_widget(form) }} #}


{% endblock %}
{% block javascripts %}

	<script src="{{ asset('js/client/reservation/step2OptionsGaranties.js')}}"></script>

{% endblock %}
