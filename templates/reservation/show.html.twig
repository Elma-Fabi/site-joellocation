{% extends 'base2.html.twig' %}

{% block title %}Reservation
{% endblock %}

{% block current_page %}
	<h2>
		<i class="fa fa-shopping-cart"></i>
		Réservations
	</h2>
{% endblock %}
{% block content %}
	{# test table  #}
	<div class="x_panel">
		<div class="x_title">
			<h2>
				<i class="fa fa-shopping-cart"></i>
				Détails réservation
			</h2>
			<div class="clearfix"></div>
		</div>
		<div class="x_content">
			<table class="table">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ reservation.id }}</td>
					</tr>
					<tr>
						<th>Type</th>
						<td>{{ reservation.type }}</td>
					</tr>
					<tr>
						<th>Date de reservation</th>
						<td>{{ reservation.dateReservation ? reservation.dateReservation|date('d-m-Y') : '' }}</td>
					</tr>
					<tr>
						<th>Date de début</th>
						<td>{{ reservation.dateDebut ? reservation.dateDebut|date('d-m-Y') : '' }}</td>
					</tr>
					<tr>
						<th>Date de fin</th>
						<td>{{ reservation.dateFin ? reservation.dateFin|date('d-m-Y') : '' }}</td>
					</tr>
					<tr>
						<th>Lieu</th>
						<td>{{ reservation.lieu }}</td>
					</tr>
					<tr>
						<th>Code reservation</th>
						<td>{{ reservation.codeReservation }}</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

	<a href="{{ path('reservation_index') }}" class="btn btn-primary">
		<i class="fa fa-arrow-left" aria-hidden="true"></i>
		retour</a>
	{% if is_granted("ROLE_ADMIN") %}
		<a href="{{ path('reservation_edit', {'id': reservation.id}) }}" class="btn btn-success">
			<i class="fa fa-book" aria-hidden="true"></i>
			Modifier</a>
	{% endif %}
	{% if is_granted("ROLE_ADMIN") %}
		{{ include('reservation/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
