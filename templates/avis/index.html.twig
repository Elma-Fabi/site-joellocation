{% extends 'base2.html.twig' %}

{% block title %}Avis index{% endblock %}

{% block content %}
    <h1>Liste des avis</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Global</th>
                <th>Ponctualit√©</th>
                <th>Accueil</th>
                <th>Service</th>
                <th>Commentaire</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for avi in avis %}
            <tr>
                <td>{{ avi.id }}</td>
                <td>{{ avi.global }}</td>
                <td>{{ avi.ponctualite }}</td>
                <td>{{ avi.accueil }}</td>
                <td>{{ avi.service }}</td>
                <td>{{ avi.commentaire }}</td>
                <td>{{ avi.date ? avi.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('avis_show', {'id': avi.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i> Visionner</a>
                    {% if is_granted("ROLE_ADMIN") %}
                        <a href="{{ path('avis_edit', {'id': avi.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Modifier</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun enregistrement trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(avis) }}
    </div>

    <a href="{{ path('avis_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}
