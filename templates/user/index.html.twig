									<div class="col-auto ">
										<div class="d-flex">
											<div class="align-items-center">
												<a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-link m-0 p-0">
													<i class="fa  fa-gear (alias)"></i>
												</a>
											</div>
										</div>
									</div>
									<div class="col-auto">
										<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûre de vouloir supprimer cet utilisateur?');">
