<form method="post" action="{{ path('faq_delete', {'id': faq.id}) }}" onsubmit="return confirm('Êtes-vous sûre de vouloir supprimer cet etat de la faq?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ faq.id) }}">
    <button class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Supprimer</button>
</form>
