<form method="post" action="{{ path('type_delete', {'id': type.id}) }}" onsubmit="return confirm('Êtes-vous sûre de vouloir supprimer ce type?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ type.id) }}">
    <button class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Supprimer</button>
</form>
