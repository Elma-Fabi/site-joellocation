{% extends 'base2.html.twig' %}

{% block title %}Vehicule{% endblock %}

{% block content %}
    <h1>Véhicule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicule.id }}</td>
            </tr>
            <tr>
                <th>Immatriculation</th>
                <td>{{ vehicule.immatriculation }}</td>
            </tr>
            <tr>
                <th>Date de mise en service</th>
                <td>{{ vehicule.dateMiseService ? vehicule.dateMiseService|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de mise en location</th>
                <td>{{ vehicule.dateMiseLocation ? vehicule.dateMiseLocation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Modèle</th>
                <td>{{ vehicule.modele }}</td>
            </tr>
            <tr>
                <th>Prix d'acquisition</th>
                <td>{{ vehicule.prixAcquisition }}</td>
            </tr>
            <tr>
                <th>Tarif journalière</th>
                <td>{{ vehicule.tarifJournaliere }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ vehicule.marque }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ vehicule.type }}</td>
            </tr>
            <tr>
                <th>Détails</th>
                <td>{{ vehicule.details }}</td>
            </tr>
            <tr>
                <th>Carburant</th>
                <td>{{ vehicule.carburation }}</td>
            </tr>
            <tr>
                <th>Caution</th>
                <td>{{ vehicule.caution }}</td>
            </tr>
            <tr>
                <th>Vitesse</th>
                <td>{{ vehicule.vitesse }}</td>
            </tr>
            <tr>
                <th>Bagages</th>
                <td>{{ vehicule.bagages }}</td>
            </tr>
            <tr>
                <th>Portes</th>
                <td>{{ vehicule.portes }}</td>
            </tr>
            <tr>
                <th>Passagers</th>
                <td>{{ vehicule.passagers }}</td>
            </tr>
            <tr>
                <th>Atouts</th>
                <td>{{ vehicule.atouts }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src='/uploads/vehicules/{{ vehicule.image }}' width='200px'></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('vehicule_index') }}" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> retour</a>
    {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('vehicule_edit', {'id': vehicule.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>
    {% endif %}
    {% if is_granted("ROLE_ADMIN") %}
        {{ include('vehicule/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
