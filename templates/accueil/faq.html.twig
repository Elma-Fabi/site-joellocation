{% extends 'base.html.twig' %}

{% block title %}Foire aux questions
{% endblock %}

{% block body %}
	<div class="container">
		<div class="section-title red">
			<h2>Foire aux questions</h2>
		</div>
		<div class="row">
			<div class="col-md-8">
				{% for faq in faqs %}

					<div class="single-faq">
						<h2 id="{{ faq.question }}">
							<span>{{ loop.index }}</span>
							{{ faq.question }}</h2>
						<p>{{ faq.reponse }}</p>
					</div>

				{% endfor %}
			</div>

			<div class="col-md-4">
				<div class="faq-sidebar-wrap">
					<h3>Index</h3>
					{% for faq in faqs %}
						<ul class="faq-sidebar">
							<li>
								<a href="#{{ faq.question }}">
									<span>{{ loop.index }}.</span>
									{{ faq.question }}</a>
							</li>
						</ul>
					{% endfor %}
				</div>
			</div>
		</div>


	</div>
</div>{% endblock %}
