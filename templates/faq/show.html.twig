{% extends 'base2.html.twig' %}

{% block title %}Faq{% endblock %}

{% block content %}
    <h1>Faq</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ faq.id }}</td>
            </tr>
            <tr>
                <th>Question</th>
                <td>{{ faq.question }}</td>
            </tr>
            <tr>
                <th>Reponse</th>
                <td>{{ faq.reponse }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('faq_index') }}" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> retour</a>
    {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('faq_edit', {'id': faq.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>
    {% endif %}
    {% if is_granted("ROLE_ADMIN") %}
        {{ include('faq/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
