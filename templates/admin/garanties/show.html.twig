{% extends 'base2.html.twig' %}

{% block title %}Garanties Clients
{% endblock %}

{% block content %}
	<h1>Garanties</h1>

	<table class="table">
		<tbody>

			<tr>
				<th>Nom garantie</th>
				<td>{{ garantie.appelation }}</td>
			</tr>
			<tr>
				<th>Prix</th>
				<td>{{ garantie.prix }}</td>
			</tr>

		</tbody>
	</table>

	<a href="{{ path('garanties_index') }}" class="btn btn-primary">
		<i class="fa fa-arrow-left" aria-hidden="true"></i>
		retour</a>
	{% if is_granted("ROLE_ADMIN") %}
		<a href="{{ path('garanties_edit', {'id': garantie.id}) }}" class="btn btn-success">
			<i class="fa fa-book" aria-hidden="true"></i>
			Modifier</a>
	{% endif %}
	{% if is_granted("ROLE_ADMIN") %}
		{{ include('admin/garanties/_delete_form.html.twig') }}
	{% endif %}


{% endblock %}
