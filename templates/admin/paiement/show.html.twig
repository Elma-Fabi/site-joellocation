{% extends 'base2.html.twig' %}

{% block title %}Paiement
{% endblock %}

{% block content %}
	<h1>Paiement</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ paiement.id }}</td>
			</tr>
			<tr>
				<th>Montant</th>
				<td>{{ paiement.montant }}</td>
			</tr>
			<tr>
				<th>Date de paiement</th>
				<td>{{ paiement.datePaiement ? paiement.datePaiement|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Motif</th>
				<td>{{ paiement.motif }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('paiement_index') }}" class="btn btn-primary">
		<i class="fa fa-arrow-left" aria-hidden="true"></i>
		retour</a>
	{% if is_granted("ROLE_ADMIN") %}
		<a href="{{ path('paiement_edit', {'id': paiement.id}) }}" class="btn btn-success">
			<i class="fa fa-book" aria-hidden="true"></i>
			Modifier</a>
	{% endif %}
	{% if is_granted("ROLE_ADMIN") %}
		{{ include('admin/paiement/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
