{% extends 'base2.html.twig' %}

{% block title %}Vehicule{% endblock %}

{% block content %}
    <h1>Véhicule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicule.id }}</td>
            </tr>
            <tr>
                <th>Immatriculation</th>
                <td>{{ vehicule.immatriculation }}</td>
            </tr>
            <tr>
                <th>Date de mise en service</th>
                <td>{{ vehicule.dateMiseService ? vehicule.dateMiseService|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de mise en location</th>
                <td>{{ vehicule.dateMiseLocation ? vehicule.dateMiseLocation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Modèle</th>
                <td>{{ vehicule.modele }}</td>
            </tr>
            <tr>
                <th>Prix d'acquisition</th>
                <td>{{ vehicule.prixAcquisition }}</td>
            </tr>
            <tr>
                <th>Tarif journalière</th>
                <td>{{ vehicule.tarifJournaliere }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('vehicule_index') }}" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> retour</a>

    <a href="{{ path('vehicule_edit', {'id': vehicule.id}) }}">Modifier</a>

    {{ include('vehicule/_delete_form.html.twig') }}
{% endblock %}
