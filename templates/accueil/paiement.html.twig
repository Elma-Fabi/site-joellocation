{# {% extends 'base.html.twig' %} #}

{# {% block title %}page de payement{% endblock %} #}
<head>
    <title>Joel Location - page de payement</title>
    <link rel="icon" type="image/x-icon" href="/images/Joel-Location-new.png"/>
    {% block stylesheets %}
        <link rel="stylesheet" href="css/client.css">
    {% endblock %}
</head>
<body>
    <div align="center">
        <img src="images/Joel-Location-new.png" alt="JOEL LOCATION" width="200px" align="center">
    </div>
    <div align="center" style="font-family:Arial;color:#960018;font-weight:bold;">
        <h1>Page de payement</h1>
    </div>
    {% block body %} 
        <div align="center" style="width:400px;align:center;text-align:center;margin-left:auto;margin-right:auto">
            <form action="/payement" method="post" id="payment-form" class="d-block">
                <div>
                    <label for="card-element" style="font-family:Arial;color:#960018;">
                        les informations de la carte
                    </label>
                    <div id="card-element">
                        <!-- A Stripe Element will be inserted here. -->
                    </div>

                    <!-- Used to display Element errors. -->
                    <div id="card-errors" role="alert"></div>
                </div>
                <br>
                <div>
                    <input type="radio" id="montant" name="montant" value="25"
                            checked>
                    <label for="huey">payer 25% du tarif</label>
                </div>
                <div>
                    <input type="radio" id="montant" name="montant" value="50"
                            checked>
                    <label for="huey">payer 25% du tarif</label>
                </div>
                <div>
                    <input type="radio" id="montant" name="montant" value="100"
                            checked>
                    <label for="huey">payer 25% du tarif</label>
                </div>
                {# <div>
                    <strong><label for="montant">Montant : </label></strong>
                    <input type="text" name="montant" id="montant">
                </div> #}
                <div>
                    <input type="hidden" name="montant" id="montant" value="{{ id }}">
                </div>
                <br>
                <button>Accepter</button>
                <input type="button" onclick="window.location.href = '/';" value="Annuler"/>
            </form>
        </div>
    {% endblock %}

    {% block javascript %}
        <script src="https://js.stripe.com/v3/"></script>
        <script src="/js/client.js"></script> 
    {% endblock %}
</body>